# Variables de entorno para Django

DEBUG=True
SECRET_KEY=django-insecure-your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# Database (opcional en local, obligatorio en producción)
# Ejemplo Render: DATABASE_URL=postgresql://user:pass@host:5432/dbname
DATABASE_URL=

# Otros
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ========================================
# Configuración de Stripe (TESTING)
# ========================================
# 
# Obtén tus claves en: https://dashboard.stripe.com/test/keys
# 
# STRIPE_PUBLIC_KEY: Comienza con pk_test_
# STRIPE_SECRET_KEY: Comienza con sk_test_
# STRIPE_WEBHOOK_SECRET: Comienza con whsec_test_
#
# Para webhooks locales:
# 1. Instala Stripe CLI: https://stripe.com/docs/stripe-cli
# 2. Ejecuta en otra terminal: stripe listen --forward-to localhost:8000/api/pago/webhook/
# 3. Copia el "signing secret" (whsec_...) aquí
#

STRIPE_PUBLIC_KEY=pk_test_YOUR_PUBLIC_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_test_YOUR_WEBHOOK_SECRET_HERE

# Google OAuth (crear credenciales en Google Cloud)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# MercadoPago (opcional)
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=

# Ejemplo local .env: copia este archivo a .env y rellena las claves
